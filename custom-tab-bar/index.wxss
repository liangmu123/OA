.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /* height: 230rpx; */
  background: #FFF;
  display: flex;
  line-height: 1.2;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1px solid #e6e6e6;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  flex-direction: column;
}
.tab-bar-item image {
  width: 60rpx;
  height: 60rpx;
  margin: 16rpx 0 ;
}
.bulge {
  background-color: #FFF;
}
.bulge .tab-bar-bulge {
  position: absolute;
  z-index: -1;
  top: -24rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* border-top: 1px solid #e6e6e6; */
  background-color: #FFF;
}
.bulge image{
  position: absolute;
  width: 96rpx;
  height: 96rpx;
  top: -24rpx;
  /* padding-top: 28rpx; */
}
.bulge view{
	font-size: 10px;
	position: absolute;
	top: 88rpx;
}
.tab-bar-item view {
  font-size: 10px;
}